set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Keepass2 floating
for_window [class="KeePass2"] floating enable

## STARTUP ##
# Dual monitor fix
exec --no-startup-id "xrandr --output HDMI1 --mode 1280x1024 --right-of VGA1"

# Set random wallpaper
exec --no-startup-id "feh --recursive --randomize --bg-scale ~/Pictures/wallpaps"

# auto sync clipboard and urxvt/xterm type selections
exec --no-startup-id "autocutsel -f"
exec --no-startup-id "autocutsel -f -s PRIMARY"
## END STARTUP ##

# Randomize wallpaper shortcut
bindsym $mod+Shift+w exec --no-startup-id "feh --recursive --randomize --bg-scale ~/Pictures/wallpaps"

# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+Shift+q kill

#rename workspace
bindsym $mod+n exec i3-input -F 'rename workspace to "%s"' -P 'New name: '

# start dmenu (a program launcher)
